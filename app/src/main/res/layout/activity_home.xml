<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cgos.chirag.tutimetable.HomeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="MONDAY"
        android:id="@+id/bMonday"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="Tuesday"
        android:id="@+id/bTuesday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bMonday" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="WEDNESDAY"
        android:id="@+id/bWednesday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bTuesday" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="THURSDAY"
        android:id="@+id/bThursday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bWednesday" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="FRIDAY"
        android:id="@+id/bFriday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bThursday" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCheck"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bFriday"
        android:layout_alignEnd="@+id/bFriday"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CGoS"
        android:id="@+id/textView2"
        android:textSize="17dp"
        android:textColor="@color/abc_secondary_text_material_light"
        android:layout_alignTop="@+id/tvCheck"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
